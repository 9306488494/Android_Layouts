<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.travelntime.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/back2">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/logo1"/>



</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:weightSum="3">

<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/flight"
    android:backgroundTint="@color/drawable_red"
    android:layout_gravity="center"
    app:cardElevation="@dimen/card_evaluation"
    app:cardMaxElevation="@dimen/card_max_elevation"
    android:layout_margin="4dp"
    android:padding="4dp"
    app:cardCornerRadius="@dimen/card_radius"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawingCacheQuality="auto"
            app:srcCompat="@drawable/plane"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/flights"
            android:gravity="center"/>
    </LinearLayout>
</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
            android:id="@+id/hotelClick"
        android:backgroundTint="@color/drawable_red"
        android:layout_gravity="center"
        app:cardElevation="@dimen/card_evaluation"
        app:cardMaxElevation="@dimen/card_max_elevation"
        android:layout_margin="4dp"
        android:padding="4dp"
        app:cardCornerRadius="@dimen/card_radius"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawingCacheQuality="auto"
                app:srcCompat="@drawable/hotel"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="Hotel"
                android:gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/drawable_red"
            android:layout_gravity="center"
            app:cardElevation="@dimen/card_evaluation"
            app:cardMaxElevation="@dimen/card_max_elevation"
            android:layout_margin="4dp"
            android:padding="4dp"
            app:cardCornerRadius="@dimen/card_radius"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/packageImg"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawingCacheQuality="auto"
                    app:srcCompat="@drawable/holiday"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="Packages"
                    android:gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/twenty_dp"
        android:textColor="@color/drawable_red"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="DOMESTIC PACKAGE"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="view all"
        android:id="@+id/domesticViewAll"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:background="@drawable/small_double_rounded"
        android:layout_gravity="end"/>

</FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/domesticRec">


    </android.support.v7.widget.RecyclerView>

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/twenty_dp"
                android:textColor="@color/drawable_red"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="INTERNATIONAL PACKAGE"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text="view all"
                android:id="@+id/interViewall"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:background="@drawable/small_double_rounded"
                android:layout_gravity="end"/>
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/interRecc">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>






</LinearLayout>

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:itemTextColor="@color/black"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/black"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"  />



</RelativeLayout>

</LinearLayout>
</LinearLayout>